<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/grupoDeRiesgo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="grupoDeRiesgo"
        android:text="Grupo De Riesgo" />

    <Button
        android:id="@+id/informacionParaPacientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="informacionParaPacientes"
        android:text="Informacion Para Pacientes" />

    <Button
        android:id="@+id/cargaDeDatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="cargaDeDatos"
        android:text="Carga De Datos" />
</LinearLayout>